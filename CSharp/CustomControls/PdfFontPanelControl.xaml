<UserControl x:Class="WpfDemosCommonCode.CustomControls.PdfFontPanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto" MinWidth="50"
    Height="Auto" MinHeight="21">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox 
            Width="Auto" 
            Height="Auto"
            BorderBrush="Black"
            VerticalContentAlignment="Center"
            BorderThickness="1"
            IsReadOnly="True"
            Background="#DFDFDF"
            Name="fontNameTextBox"
            MouseDoubleClick="fontNameTextBox_MouseDoubleClick"
            ToolTip="Double click on the text box for changing the font."/>

        <Button Width="25" 
                Height="Auto" 
                Name="fontNameButton"
                Grid.Column="1"
                Margin="3,0,0,0" 
                Click="fontNameButton_Click">
            ...
        </Button>
    </Grid>
</UserControl>
