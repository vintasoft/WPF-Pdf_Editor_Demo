<Window x:Class="WpfDemosCommonCode.Pdf.RemoveOptionalContentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Remove Layers (Optional Content)" Height="350" Width="450" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">
           Select optional content groups to remove: 
        </Label>
        
        <ListBox Grid.Row="1" Name="ocGroupsCheckedListBox" Margin="3"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="okButton" Content="OK" Height="23" Width="75" Margin="3"
                    Click="OkButton_Click"/>
            <Button Name="cancelButton" Content="Cancel" Height="23" Width="75" Margin="3"
                    Click="CancelButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
