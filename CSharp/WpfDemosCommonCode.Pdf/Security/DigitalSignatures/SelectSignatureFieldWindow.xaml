<Window x:Class="WpfDemosCommonCode.Pdf.Security.SelectSignatureFieldWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select Signature Field" Height="245" Width="407" MinHeight="245" MinWidth="407" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="27" />
        </Grid.RowDefinitions>
        <ListBox Name="signaturesListBox" Grid.Row="0" Margin="3" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="buttonOk" Width="75" Height="25" Margin="3,0" Click="buttonOk_Click">OK</Button>
            <Button Name="buttonCancel" Width="75" Height="25" Margin="3,0" Click="buttonCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
