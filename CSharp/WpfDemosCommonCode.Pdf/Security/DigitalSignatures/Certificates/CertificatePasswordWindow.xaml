<Window x:Class="WpfDemosCommonCode.Pdf.Security.CertificatePasswordWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Password" Height="127" Width="309" MinHeight="127" MinWidth="309" MaxHeight="127" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2">Please enter a password.</Label>
        <Label Grid.Row="1" Grid.Column="0">Enter password:</Label>
        <TextBox Name="passwordTextBox" Grid.Row="1" Grid.Column="1" Height="23" Margin="3,0" />
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="buttonOk" Width="75" Height="23" Margin="3" Click="buttonOk_Click">OK</Button>
            <Button Name="buttonCancel" Width="75" Height="23" Margin="3" Click="buttonCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
