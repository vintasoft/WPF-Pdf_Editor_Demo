<Window x:Class="WpfDemosCommonCode.Pdf.SelectResourceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select resource type" Height="153" Width="175" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Name="newResourceButton" Grid.Row="0" Height="30" Margin="3,0" Click="newResourceButton_Click">New resource...</Button>
        <Button Name="exisingResourceButton" Grid.Row="1" Height="30" Margin="3,0" Click="exisingResourceButton_Click">Existing resource...</Button>
        <Button Name="cancelButton" Grid.Row="3" Width="75" Height="21" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3,3" Click="cancelButton_Click">Cancel</Button>
    </Grid>
</Window>
