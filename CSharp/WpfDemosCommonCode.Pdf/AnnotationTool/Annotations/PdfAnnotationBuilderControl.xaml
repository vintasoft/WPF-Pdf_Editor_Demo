                </StackPanel>
            </MenuItem.Header>
            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Filled Ellipse" 
                      Click="addAndBuildAnnotationButton_Click"
                      Name="filledEllipseMenuItem"/>
            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Cloud Ellipse" 
                      Click="addAndBuildAnnotationButton_Click"
