                    <Button Content="Rectangle" Name="rectangleButton" Click="addAndBuildAnnotationButton_Click"/>
                    <Label Style="{StaticResource MainMenuHeaderDropDownLabel}"/>
                </StackPanel>
            </MenuItem.Header>
            <MenuItem Style="{StaticResource SubMenu}"
