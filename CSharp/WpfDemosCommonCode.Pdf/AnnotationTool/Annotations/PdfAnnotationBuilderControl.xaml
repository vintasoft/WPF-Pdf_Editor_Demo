            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Right Pointer" 
                      Click="addAndBuildAnnotationButton_Click"
                      Name="textRightPointerMenuItem"/>
            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Star" 
                      Click="addAndBuildAnnotationButton_Click"
                      Name="textStarMenuItem"/>
            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Up Arrow" 
                      Click="addAndBuildAnnotationButton_Click"
                      Name="textUpArrowMenuItem"/>
            <MenuItem Style="{StaticResource SubMenu}"
                      Header="Up Left Arrow" 
                      Click="addAndBuildAnnotationButton_Click"
