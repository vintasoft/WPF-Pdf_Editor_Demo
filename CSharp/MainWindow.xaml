        <Grid Name="toolsAndImageViewerPanel" Grid.Row="2" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="308" MinWidth="120"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TabControl Name="toolsTabControl" Margin="0,0,5,0" SelectionChanged="toolsTabControl_SelectionChanged">
                <TabItem Header="Pages" Name="pagesTabItem">
                    <vsui:WpfThumbnailViewer 
                        ThumbnailContainerStyle="{StaticResource ThumbnailItemStyle}" 
                        Name="thumbnailViewer1" 
                        GenerateOnlyVisibleThumbnails="True" 
                        ThumbnailFlowStyle="WrappedRows"
                        ThumbnailRenderingThreadCount="2"
                        ThumbnailsLoadingProgress="thumbnailViewer1_ThumbnailLoadingProgress">
                    </vsui:WpfThumbnailViewer>
                </TabItem>
                <TabItem Header="Bookmarks" Name="bookmarksTabItem">
                    <wdcc:BookmarkTreeViewEditor x:Name="documentBookmarks" CanEditBookmarks="True"/>
                </TabItem>
                <TabItem Header="Annotations / Form Fields" Name="annotationToolTabItem">
                    <wdcc:PdfAnnotationToolControl x:Name="annotationToolControl" Width="Auto" Height="Auto" />
                </TabItem>
                <TabItem Header="Comments" Name="commentsTabItem">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Height="23" Margin="3,0" Name="addCommentButton" Click="AddCommentButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16" Source="{StaticResource AddCommentIcon}" Margin="3,0" VerticalAlignment="Center" Stretch="None" />
                                <TextBlock VerticalAlignment="Center">Add Comment...</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="0" Grid.Column="1" Height="23" Margin="3,0" Name="closeAllCommentsButton" Click="CloseAllCommentsButton_Click" >Close All Comments</Button>


                        <wdcc:PdfCommentsControl Grid.Row="1" Grid.ColumnSpan="2" Margin="0,3" x:Name="commentsControl" />
                    </Grid>
                </TabItem>
                <TabItem Header="Text Extraction" Name="textExtractionTabItem">
                    <widcci:WpfTextSelectionControl x:Name="textSelectionControl" Height="Auto" Width="Auto" />
                </TabItem>
                <TabItem Header="Redact" Name="removeContentTabItem">
                    <wdcc:PdfRemoveContentControl x:Name="pdfRemoveContentControl" Width="Auto" Height="Auto" />
                </TabItem>
                <TabItem Header="Content Editor" Name="contentEditorTabItem">
                    <wdcc:PdfContentEditorControl x:Name="pdfContentEditorControl" Height="Auto" Width="Auto" />
                </TabItem>
            </TabControl>

            <GridSplitter Grid.Column ="0" Background="LightBlue" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>

            <vsui:WpfImageViewer
                    Background="#FFEEEEEE" 
                    Grid.Column ="1" 
                    x:Name="imageViewer1" 
                    Width="Auto" 
                    Height="Auto" 
                    SizeMode="BestFit" 
                    InputGestureCut="{x:Null}"
                    InputGestureCopy="{x:Null}"
                    InputGestureDelete="{x:Null}"
                    InputGestureInsert="{x:Null}"
                    FocusedIndexChanged="imageViewer1_FocusedIndexChanged"
                    FocusedIndexChanging="imageViewer1_FocusedIndexChanging"
                    ImageLoaded="imageViewer1_ImageLoaded"
                    ImageLoading="imageViewer1_ImageLoading"
                    ImageLoadingException="imageViewer1_ImageLoadingException"
                    ZoomChanged="imageViewer1_ZoomChanged"
                    RendererCacheSize="256"
                    IsKeyboardNavigationEnabled="True"/>
        </Grid>

